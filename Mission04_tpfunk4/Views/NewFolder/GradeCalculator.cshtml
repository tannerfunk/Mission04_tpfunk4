@{
}
@model GradeCalculatorModel;

<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments: </label>
    <input id="assignments" asp-for="Assignments" /><br />
    <label>Group Project:</label>
    <input id="projects" asp-for="Projects" /><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="Quizzes" /><br />
    <label>Midterm Exam:</label>
    <input id="midterm" asp-for="Midterm" /><br />
    <label>Final Exam:</label>
    <input id="final" asp-for="Final" /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="Intex" /><br />
    <br />
    <input id="btnsend" type="submit" value="Calculate" /><br />
    <label>Student Grade:</label>
    <span id="letterGrade"></span>
    <span id="gradeCalculated"></span>
    <div asp-validation-summary="All"></div>
</form>


<script src="js/main.js"></script>